<div>
  <div>
    <h1>
      List of all contacts
    </h1>
  </div>
</div>

<% if session[:user_id] != nil %>

<hr>

<div>
  <div>
    <h2>
      Add a new contact
    </h2>

    <form action="/insert_contact" method="post">
      <div>
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email">
      </div>

      <div>
        <label for="group_box">
          Bank
        </label>

        <input type="text" id="group_box" name="query_group">
      </div>

      <div>
        <label for="position_box">
          Position
        </label>

        <input type="text" id="position_box" name="query_position">
      </div>

      <div>
        <label for="last_contact_box">
          Name
        </label>

        <input type="text" id="last_contact_box" name="query_last_contact">
      </div>

      <div>
        <label for="response_box">
          Response
        </label>

        <input type="text" id="response_box" name="query_response">
      </div>

      <div>
        <label for="linkedin_box">
          Linkedin
        </label>

        <input type="text" id="linkedin_box" name="query_linkedin">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <textarea id="bio_box" name="query_bio" rows="3"></textarea>
      </div>

      <button>
        Create contact
      </button>
    </form>
  </div>
</div>

<%= search_form_for @q do |f| %>
  <p>Narrow results:</p>

  <div>
    <%= f.label :group_cont, "Bank containing" %>
    <%= f.text_field :group_cont, :group => "Enter a few characters" %>
  </div>

  <div>
    <%= f.label :position_cont, "Position is..." %>
    <%= f.text_field :position_cont, :position => "Year greater than or equal to" %>
  </div>

  <%= f.submit :class => "btn btn-primary btn-block" %>
  
  <a href="/contacts">Clear filters</a>
<% end %>


<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Bank
        </th>

        <th>
          Position
        </th>

        <th>
          Name
        </th>

        <th>
          Response
        </th>

        <th>
          Linkedin
        </th>

        <th>
          Bio
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_contacts.each do |a_contact| %>
      <tr>
        <td>
          <%= a_contact.id %>
        </td>

        <td>
          <%= a_contact.email %>
        </td>

        <td>
          <%= a_contact.group %>
        </td>

        <td>
          <%= a_contact.position %>
        </td>

        <td>
          <%= a_contact.last_contact %>
        </td>

        <td>
          <%= a_contact.response %>
        </td>

        <td>
          <%= a_contact.linkedin %>
        </td>

        <td>
          <%= a_contact.bio %>
        </td>

        <td>
          <%= time_ago_in_words(a_contact.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_contact.updated_at) %> ago
        </td>

        <td>
          <a href="/contacts/<%= a_contact.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<% else %>
  <div style="color: red">You are not signed in!</div>
<%end%>

<hr>
