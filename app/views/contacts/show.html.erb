<div>
  <div>
    <h1>
      Contact #<%= @the_contact.id %> details
    </h1>

    <div>
      <div>
        <a href="/contacts">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_contact/<%= @the_contact.id %>">
          Delete contact
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Email
      </dt>
      <dd>
        <%= @the_contact.email %>
      </dd>

      <dt>
        Group
      </dt>
      <dd>
        <%= @the_contact.group %>
      </dd>

      <dt>
        Position
      </dt>
      <dd>
        <%= @the_contact.position %>
      </dd>

      <dt>
        Last contact
      </dt>
      <dd>
        <%= @the_contact.last_contact %>
      </dd>

      <dt>
        Response
      </dt>
      <dd>
        <%= @the_contact.response %>
      </dd>

      <dt>
        Linkedin
      </dt>
      <dd>
        <%= @the_contact.linkedin %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_contact.bio %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_contact.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_contact.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit contact
    </h2>

    <form action="/modify_contact/<%= @the_contact.id %>"  method="post" >
      <div>
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email" value="<%= @the_contact.email %>">
      </div>

      <div>
        <label for="group_box">
          Group
        </label>

        <input type="text" id="group_box" name="query_group" value="<%= @the_contact.group %>">
      </div>

      <div>
        <label for="position_box">
          Position
        </label>

        <input type="text" id="position_box" name="query_position" value="<%= @the_contact.position %>">
      </div>

      <div>
        <label for="last_contact_box">
          Last contact
        </label>

        <input type="text" id="last_contact_box" name="query_last_contact" value="<%= @the_contact.last_contact %>">
      </div>

      <div>
        <label for="response_box">
          Response
        </label>

        <input type="text" id="response_box" name="query_response" value="<%= @the_contact.response %>">
      </div>

      <div>
        <label for="linkedin_box">
          Linkedin
        </label>

        <input type="text" id="linkedin_box" name="query_linkedin" value="<%= @the_contact.linkedin %>">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <textarea id="bio_box" name="query_bio"><%= @the_contact.bio %></textarea>
      </div>

      <button>
        Update contact
      </button>
    </form>
  </div>
</div>

<hr>
